<div class="piece">
  <div>
    <h2><%= @hotel.name %></h2>
    <% if @hotel.cover.attached? %>
      <%= image_tag @hotel.cover.variant(resize: "200x200") %>
    <% end %>
  </div>
  <div class="piece-right">
    <p><b>Contact:</b> <%= mail_to @hotel.email, @hotel.email %></p>
    <p><b>City:</b> <%= @hotel.city %></p>
    <p><b>Country:</b> <%= @hotel.country %></p>
    <p><b>Address:</b> <%= @hotel.address %></p>
  </div>
</div>
