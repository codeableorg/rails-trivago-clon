<%= form_for [:admin, @booking] do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start_date, "Start date: " %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date, "End date: " %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :paid_price, "Price: US $" %>
    <%= f.number_field :paid_price, :placeholder => "Enter price"%>
  </div>

  <div class="field">
    <p>User:
    <%= f.collection_select(:user_id, User.all, :id, :name) %> </p>
  </div>

  <div class="field">
    <p>Room
    <%= f.collection_select(:room_id, Room.all, :id, :name) %></p>
  </div>

  <div class="actions">
    <%= f.submit "Save Booking", :class => "btn btn-new"%>
  </div>
<% end %>